[Unit]
Description=Samba Fileserver Daemon
Documentation=man:samba(8) man:samba(7) man:smb.conf(5)
Wants=network-online.target
After=network.target network-online.target
PartOf=samba-ad-dc.service

[Service]
Type=notify
NotifyAccess=all
PIDFile=/run/sambafileserver/smbd.pid
LimitNOFILE=16384
ExecStartPre=/usr/bin/mkdir -p /run/sambafileserver/
ExecStart=/usr/sbin/smbd --foreground --no-process-group $SAMBAOPTIONS -s /etc/samba/smb-fileserver.conf -l /var/log/samba/fileserver/
ExecReload=/bin/kill -HUP $MAINPID
ExecStartPost=/usr/share/cranix/tools/poststart-samba-instant.sh fileserver


[Install]
WantedBy=multi-user.target

