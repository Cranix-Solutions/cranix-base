#!/bin/bash
# Copyright 2017 Peter Varkoly <peter@varkoly.de>
export PATH="/sbin:/usr/sbin:/usr/local/sbin:/root/bin:/usr/local/bin:/usr/bin:/bin"
. /etc/sysconfig/schoolserver

EXT3=$( mount | grep "on /home type ext3" )
if [ "$EXT3" ]; then
	DEV=$(mount | grep "/home " | gawk '{ print $1 }')
	export HOME="/root"
	(
		for u in $( echo "select uid from Users" | /usr/bin/mysql OSS )
		do
			echo -n "$u "
			quota -wl $u | grep $DEV |  gawk  '{ print $2 " " $3 }' | sed s/\*//
		done
	) | sed "s/${SCHOOL_WORKGROUP}.//" | gawk -f /usr/share/oss/tools/quota.awk > /tmp/quotalist
else
	xfs_quota -x -c 'report -u -N' /home | grep ${SCHOOL_WORKGROUP} | sed "s/${SCHOOL_WORKGROUP}.//" | gawk -f /usr/share/oss/tools/quota.awk > /tmp/quotalist
fi
TOKEN=$( grep de.openschoolserver.api.auth.localhost= /opt/cranix-java/conf/cranix-api.properties | sed 's/de.openschoolserver.api.auth.localhost=//' )
/usr/bin/curl -X POST --header 'Content-Type: application/json' --header 'Accept: application/json' --header 'Authorization: Bearer '${TOKEN} -d '@/tmp/quotalist' 'http://localhost:9080/api/users/syncFsQuotas'

